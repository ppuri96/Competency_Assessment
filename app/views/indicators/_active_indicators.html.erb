<h2>Active Indicators for <%= link_to @competency.name, competency_path(@competency) %></h2>

<% if @active_indicators.empty? %>
  <p><em>There are no active indicators at this time.</em></p>
<% end %>

<% if @active_indicators.empty? %>
  <p><em><%= "There are no active indicators at this time for the #{@competency.name} competency." %></em></p>
<% else %>
  <table id="" class="display striped responsive-table" border="1">
    <thead>
      <tr>
        <th>Description</th>
        <th>Level</th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @active_indicators.each do |i| %>
        <tr>
          <td><%= link_to i.description, indicator_path(i, :competency_id => @competency_id) %></td>
          <td><%= i.level.name %></td>
          <td><%= link_to "Edit", edit_indicator_path(i, :competency_id => @competency_id), class: "waves-effect waves-light btn" %></td>
          <td>
            <%= link_to "Delete", indicator_path(i),
                method: 'delete',
                data: {confirm: "Are you sure you want to permanently delete #{i.description}?"},
                class: "waves-effect waves-light btn red" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
