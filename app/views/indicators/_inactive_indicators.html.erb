<h2>Inactive Indicators for <%= link_to @competency.name, competency_path(@competency) %></h2>

<% if @inactive_indicators.empty? %>
  <p><em><%= "There are no inactive indicators at this time for the #{@competency.name} competency." %></em></p>
<% else %>
  <table id="" class="display striped responsive-table" border="1">
    <thead>
      <tr>
        <th>Description</th>
        <th>Level</th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_indicators.each do |i| %>
        <tr>
          <td><%= link_to i.description, indicator_path(i) %></td>
          <td><%= i.level.name %></td>
          <td><%= link_to "Edit", edit_indicator_path(i, :competency_id => @competency_id) %></td>
          <td>
            <%= link_to "Delete", indicator_path(i, :competency_id => @competency_id),
                method: 'delete',
                data: {confirm: "Are you sure you want to permanently delete #{i.description}?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
