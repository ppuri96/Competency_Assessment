<div class="center-text">
  <h1>Manage <%= @competency.name %> Competency</h1>
</div>
<div class="row center-text">
  <p class="flow-text"> <%= @competency.description %></p>
  <h6 class="flow-text"><%= @competency.active ? "This competency is active" : "This competency is inactive" %></h6>
</div>
<div class="divider"></div>
<div class="section">
  <div class="row">
    <div class="col s12 m6 center-text">
      <%= render partial: "manage_competency_card", locals: {model_name: "resource",
                                                              competency: @competency} %>
    </div>

    <div class="col s12 m6 center-text">
      <%= render partial: "manage_competency_card", locals: {model_name: "question",
                                                              competency: @competency} %>
    </div>

    <div class="col s12 m6 center-text offset-s3">
      <%= render partial: "manage_competency_card", locals: {model_name: "indicator",
                                                              competency: @competency} %>
    </div>
  </div>
</div>
<div class="divider"></div>
<div class="row">
  <div class="col s2 offset-s4">
    <%= link_to "Edit", edit_competency_path(@competency), class: "waves-effect waves-light btn green"%>
  </div>
  <div class="col s2">
    <%= link_to "Delete", competency_path(@competency),
        method: 'delete',
        data: {confirm: "Are you sure you want to permanently delete this mapping?"},
        class: "waves-effect waves-light btn red" %>
  </div>
</div>
